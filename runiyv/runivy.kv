#:kivy 1.9.1

<RunivyObstacle>:
    size: 30, 80
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<RunivyPlayer>:
    size: 80, 150
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<RunivyGame>:
    player: player
    score: score

    canvas:
        Rectangle:
            pos: 0, 100
            size: root.width, 4

    Label:
        id: score
        font_size: 70
        text: "0"
        center_x: root.center_x
        top: root.top - 30

    RunivyPlayer:
        id: player
        pos: 40, 104
