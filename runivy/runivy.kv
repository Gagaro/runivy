#:kivy 1.9.1

<RunivyObstacle>:
    size: 30, 80
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "data/skyscraper.png"

<RunivyPlayer>:
    size: 80, 150
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            texture: self.texture

<RunivyGame>:
    player: player
    score: score

    canvas:
        Rectangle:
            pos: 0, 0
            size: root.width, 104
            source: "data/ground.png"
        # Sky
        Color:
            rgb: (0, 0.5, 1)
        Rectangle:
            pos: 0, 104
            size: root.width, (root.height - 104) / 4
        Color:
            rgb: (0.2, 0.65, 1)
        Rectangle:
            pos: 0, 104 + (root.height - 104) / 4
            size: root.width, (root.height - 104) / 4
        Color:
            rgb: (0.4, 0.80, 1)
        Rectangle:
            pos: 0, 104 + (root.height - 104) / 4 * 2
            size: root.width, (root.height - 104) / 4
        Color:
            rgb: (0.6, 0.95, 1)
        Rectangle:
            pos: 0, 104 + (root.height - 104) / 4 * 3
            size: root.width, (root.height - 104) / 4

    Label:
        id: score
        font_size: 70
        text: "0"
        center_x: root.center_x
        top: root.top - 30

    RunivyPlayer:
        id: player
        pos: 40, 104
